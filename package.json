{
	"name": "x.wuh.site",
	"version": "1.0.0",
	"private": true,
	"description": "博客项目相关的系列仓库, 全套使用Nextjs搭建",
	"main": "index.js",
	"scripts": {
		"dev:web": "pnpm --filter wuh.site run dev",
		"build:web": "pnpm --filter wuh.site run build",
		"start:web": "pnpm --filter wuh.site run start",
		"prepare": "husky",
		"changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
		"version:major": "standard-version -r major",
		"version:minor": "standard-version -r minor",
		"version:patch": "standard-version -r patch",
		"release": "pnpm changelog && pnpm version:major"
	},
	"workspaces": [
		"packages/**"
	],
	"keywords": [
		"wuh.site",
		"blog",
		"吴尒红"
	],
	"author": "shadow <wuh201314@foxmail.com>",
	"license": "ISC",
	"dependencies": {
		"@wuh.site/components": "workspace:^",
		"classnames": "^2.5.1",
		"conventional-changelog-cli": "^5.0.0",
		"next": "15.0.4",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"standard-version": "^9.5.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.6.0",
		"@commitlint/config-conventional": "^19.6.0",
		"@types/node": "^20",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"eslint": "^8",
		"eslint-config-next": "15.0.4",
		"husky": "^9.1.7",
		"typescript": "^5"
	},
	"husky": {
		"hooks": {
			"pre-commit": "commitlint -E"
		}
	}
}
