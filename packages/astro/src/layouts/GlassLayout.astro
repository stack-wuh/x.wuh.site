    <ClientRouter />
	</head>
	<body class="w-full min-h-screen">
    <main class="flex! flex-col h-full bg-[url(https://d.jiandan.link/unsplash/photo-1486246772917-8947d0f7f541)] bg-center bg-cover bg-no-repeat">
