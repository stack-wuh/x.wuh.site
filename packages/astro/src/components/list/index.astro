---
import ListCard from './card.astro'

interface IData {
  title: string,
  body: string,
  updated_at: string,
  comments: number
}

const response = await fetch('https://api.github.com/repos/stack-wuh/blog/issues')
const data: IData[] = await response.json()
console.log('====> dataList: ', data)
---

<div class="list w-full flex flex-col gap-4">
  {
    data.map(item => {
      return (<ListCard title={item.title} description={item.body.slice(0, 50)} updated={item.updated_at} comments={item.comments} />)
    })
  }
</div>