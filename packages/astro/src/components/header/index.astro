---
const url = Astro.url
const pathname = url.pathname

/** 导航列表 */
const navList = [
  {
    title: '首页',
    href: '/',
    active: pathname === '/'
  },
  {
    title: '归档',
    href: '/types',
    active: pathname === '/types'
  },
  {
    title: '关于我',
    href: '/about',
    active: pathname === '/about'
  }
]
---

<header class='fixed top-0 h-[54px] inline-flex items-center justify-start w-full px-8 border-b border-gray-200 bg-white shadow-xs'>
  <div class='avatar-wrapper inline-flex items-center gap-2'>
    <img src='https://src.wuh.site/web/avatar.jpeg' alt='avatar' width='40px' />
    <span class='text-xs text-blue-500'>纤云弄巧, 飞星传恨</span>
  </div>

  <nav class='flex-1 flex justify-end text-sm'>
    <ul class='inline-flex items-center gap-2 text-blue-500 group'>
      {
        navList.map((nav) => {
          return (
            <li>
              <a
                href={nav.href}
                class:list={{
                  'hover:bg-blue-100 hover:text-blue-600 px-3 py-1 transition duration-300 rounded': true,
                  'group-hover:text-blue-300 group-hover:bg-transparent': true,
                  'bg-blue-100': nav.active
                }}
              >
                {nav.title}
              </a>
            </li>
          )
        })
      }
    </ul>
  </nav>
</header>
